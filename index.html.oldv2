  });
  optionsHTML += '</div>';

  // Build action panels
  let actionsHTML = '';
  sosKeys.forEach(key => {
    const data = L.sos[key];
    let breatheHTML = '';
    if (data.hasBreathe) {
      const breatheId = key === 'spiraling' ? ' id="breatheCircle"' : '';
      breatheHTML = `<div class="sos-breathe">
        <div class="sos-breathe-circle"${breatheId}>${data.breatheCircleText}</div>
